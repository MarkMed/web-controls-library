{
  "name": "gx-web-controls",
  "version": "0.0.1",
  "description": "GeneXus Web Controls Library",
  "main": "dist/gx-web-controls.js",
  "types": "dist/types/components.d.ts",
  "collection": "dist/collection/collection-manifest.json",
  "files": ["dist/"],
  "browser": "dist/gx-web-controls.js",
  "scripts": {
    "build": "stencil build --docs",
    "dev":
      "sd concurrent \"stencil build --dev --watch --docs\" \"stencil-dev-server\" ",
    "lint": "npm run tslint",
    "precommit": "pretty-quick --staged",
    "serve": "stencil-dev-server",
    "start": "npm run dev",
    "test": "jest --no-cache",
    "test.watch": "jest --watch --no-cache",
    "tslint": "tslint --project . -e \"**/*.spec.ts\"",
    "validate": "npm i && npm run lint && npm run test && npm run build"
  },
  "dependencies": {
    "@stencil/core": "^0.6.13",
    "popper.js": "^1.14.3"
  },
  "devDependencies": {
    "@stencil/dev-server": "latest",
    "@stencil/sass": "0.0.3",
    "@stencil/utils": "latest",
    "@types/jest": "^21.1.1",
    "husky": "^0.14.3",
    "jest": "^21.2.1",
    "prettier": "^1.11.1",
    "pretty-quick": "^1.4.1",
    "sass-lint": "^1.12.1",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-eslint-rules": "^5.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/genexuslabs/web-controls-library.git"
  },
  "author": "GeneXus",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/genexuslabs/web-controls-library"
  },
  "homepage": "https://github.com/genexuslabs/web-controls-library",
  "jest": {
    "transform": {
      "^.+\\.(ts|tsx)$":
        "<rootDir>/node_modules/@stencil/core/testing/jest.preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": ["ts", "tsx", "js", "json", "jsx"]
  }
}
